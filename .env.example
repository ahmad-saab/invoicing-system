# ISYS - Invoice Management System Environment Configuration Template
# Copy this file to .env and update with your actual values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME=ISYS
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ===========================================
# SERVER CONFIGURATION
# ===========================================
HOST=localhost
PORT=8000
RELOAD=true
WORKERS=1

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# SQLite for local development
DB_TYPE=sqlite
DB_PATH=./test_customers.db
DB_ECHO=false

# MySQL for production (uncomment and configure)
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=isys_invoice
# DB_USER=your_db_username
# DB_PASSWORD=your_db_password

# ===========================================
# EMAIL PROCESSING CONFIGURATION
# ===========================================
# Email account for LPO processing
EMAIL_HOST=imap.gmail.com
EMAIL_PORT=993
EMAIL_USE_SSL=true
EMAIL_USERNAME=your_email@domain.com
EMAIL_PASSWORD=your_email_app_password_here
EMAIL_FOLDER=INBOX

# Email processing settings
EMAIL_CHECK_INTERVAL=300
EMAIL_MAX_ATTACHMENTS=10
EMAIL_ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,html,htm,png,jpg,jpeg

# ===========================================
# FILE STORAGE CONFIGURATION
# ===========================================
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
LOG_DIR=./logs
BACKUP_DIR=./backups

MAX_FILE_SIZE=50
MAX_TOTAL_SIZE=500

# ===========================================
# LPO PARSING CONFIGURATION
# ===========================================
PARSER_CONFIDENCE_THRESHOLD=70
PARSER_TIMEOUT=30
ENABLE_OCR=true
OCR_LANGUAGE=eng+ara

PRIMARY_PARSER=invoice2data
SECONDARY_PARSER=pdfplumber
FALLBACK_PARSER=pypdf2

# ===========================================
# CUSTOMER MATCHING CONFIGURATION
# ===========================================
EMAIL_MATCH_WEIGHT=0.5
ADDRESS_MATCH_WEIGHT=0.3
TRN_MATCH_WEIGHT=0.2
ADDRESS_SIMILARITY_THRESHOLD=80
MIN_ADDRESS_KEYWORDS=3

# ===========================================
# BUSINESS RULES CONFIGURATION
# ===========================================
DEFAULT_VAT_RATE=5.0
DEFAULT_CURRENCY=AED
DEFAULT_PLACE_OF_SUPPLY=Dubai

DEFAULT_PAYMENT_TERM=30 days
PAYMENT_START_RULE=end_of_month
WEEKEND_PROCESSING=true

DEFAULT_INVOICE_DATE_RULE=order_date
BUSINESS_DAYS_ONLY=true

# ===========================================
# HOLIDAY PROCESSING
# ===========================================
HOLIDAY_COUNTRY=UAE
HOLIDAY_CHECK_ENABLED=true
SKIP_WEEKENDS=true
SKIP_HOLIDAYS=true

# ===========================================
# ZOHO INTEGRATION (Future)
# ===========================================
ZOHO_CLIENT_ID=your_zoho_client_id_here
ZOHO_CLIENT_SECRET=your_zoho_client_secret_here
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token_here
ZOHO_BASE_URL=https://books.zoho.com/api/v3
ZOHO_ORGANIZATION_ID=your_organization_id_here

# ===========================================
# SECURITY SETTINGS
# ===========================================
SECRET_KEY=change_this_to_a_secure_random_string_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

ENABLE_METRICS=true
METRICS_PORT=9090

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
ENABLE_SWAGGER=true
ENABLE_REDOC=true
ENABLE_DEBUG_TOOLBAR=true

TEST_DATABASE=./test_isys.db
ENABLE_TEST_MODE=false
MOCK_EMAIL_PROCESSING=false

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SLACK_NOTIFICATIONS=false
ENABLE_WEBHOOK_NOTIFICATIONS=false

NOTIFICATION_EMAIL_HOST=smtp.gmail.com
NOTIFICATION_EMAIL_PORT=587
NOTIFICATION_EMAIL_USERNAME=your_notification_email@domain.com
NOTIFICATION_EMAIL_PASSWORD=your_notification_email_password
NOTIFICATION_RECIPIENTS=admin@domain.com,ops@domain.com

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30

MAINTENANCE_START_TIME=02:00
MAINTENANCE_END_TIME=04:00
MAINTENANCE_TIMEZONE=Asia/Dubai

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_MULTI_CURRENCY=true
ENABLE_ADVANCED_MATCHING=true
ENABLE_BULK_PROCESSING=true
ENABLE_ANALYTICS_DASHBOARD=true
ENABLE_EXPORT_FUNCTIONALITY=true